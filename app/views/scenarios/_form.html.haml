= form_for(scenario) do |f|
  - if scenario.errors.any?
    #error_explanation
      %h2
        = pluralize(scenario.errors.count, "error")
        prohibited this scenario from being saved:
      %ul
        - scenario.errors.full_messages.each do |message|
          %li= message
  .actions
    .field
      = f.label :name
      %br
      = f.text_field :name
    .field
      = f.label :description
      %br
      = f.text_area :description
    .field
      = f.label :data
      %br
      = f.text_area :data, value: f.object.data.is_a?(String) ? f.object.data : f.object.data.to_json
    = f.submit
