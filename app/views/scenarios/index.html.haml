%p#notice= notice
%h1 Scenarios
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @scenarios.each do |scenario|
      %tr
        %td= scenario.name
        %td= link_to 'Show', scenario
        %td= link_to 'Edit', edit_scenario_path(scenario)
        %td= link_to 'Destroy', scenario, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Scenario', new_scenario_path
