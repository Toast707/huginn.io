%h1
  Show Scenario
  = agent_name @scenario.name
  - if @scenario.icon.blank?
    = scenario_label(@scenario, icon('gear'))
  - else
    = scenario_label(@scenario, icon(@scenario.icon))
= form_for(@scenario) do |f|
  .row
    .col-md-4
      .form-group
        = f.label :name
        = f.text_field :name, :class => 'form-control', :placeholder => "Name your Scenario", disabled: true

  .row
    .col-md-8
      .form-group
        = f.label :description, "Description"
        = f.text_area :description, :rows => 8, :class => 'form-control', :placeholder => "Optionally describe what this Scenario will do.  If this will be public, you should also include some contact information.", disabled: true
  .row
    .col-md-8
      .form-group
        = f.label :data, "Scenario JSON"
        = f.text_area :data, :rows => 8, :class => 'form-control', :placeholder => "Scenario JSON", disabled: true

  .row

    .col-md-2
      .form-group
        = f.label :tag_bg_color, "Tag Background Color"
        = f.color_field :tag_bg_color, :class => 'form-control', :value => @scenario.tag_bg_color || default_scenario_bg_color, disabled: true
    .col-md-2
      .form-group
        = f.label :tag_fg_color, "Tag Foreground Color"
        = f.color_field :tag_fg_color, :class => 'form-control', :value => @scenario.tag_fg_color || default_scenario_fg_color, disabled: true

= link_to 'Edit', edit_scenario_path(@scenario)
|
= link_to 'Back', scenarios_path
